<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2632"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginLeft="24dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp" >

        <com.hanvon.rc.utils.CircleImageView
            android:id="@+id/iv_login_icon"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/logout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_login_icon"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ivUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="未登录"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/ivhvnUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_login"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_ocr"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@id/separator1"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="56dp" >

        <ImageView
            android:id="@+id/iv_ocr_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ocr_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_ocr_icon"
            android:gravity="center"
            android:text="@string/menu_main_ocr"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_ocr"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_file_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/file_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_file_icon"
            android:gravity="center"
            android:text="@string/menu_main_file"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_file"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator3"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_orders_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/order_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_orders_icon"
            android:gravity="center"
            android:text="@string/menu_main_orders"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_orders"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <ImageView
            android:id="@+id/iv_settings_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/setting_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_settings_icon"
            android:gravity="center"
            android:text="@string/menu_main_settings"
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/separator5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_orders"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7dp"
        android:background="#2b6478" />

    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/separator4"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/tv_comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:gravity="bottom"
            android:textColor="@color/white"
            android:text="rc.hanvon.com" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_comp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="24dp"
            android:textColor="@color/white"
            android:text="Version:1.0.1" />
    </RelativeLayout>

</RelativeLayout>